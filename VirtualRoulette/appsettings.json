{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "PolicyName": "AllowLocalhost",
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:63342"
    ]
  },
  "RateLimiting": {
    "PolicyName": "fixed",
    "PermitLimit": 10,
    "WindowSeconds": 10,
    "QueueLimit": 2
  },
  "Authentication": {
    "Cookie": {
      "HttpOnly": true,
      "SecurePolicy": "Always",
      "SameSite": "None",
      "IsEssential": true
    },
    "LoginPath": "/api/v1/Authorize/signin",
    "ExpirationMinutes": 5,
    "SlidingExpiration": true,
    "SessionIdleTimeoutMinutes": 5
  },
  "Database": {
    "DatabaseName": "VirtualRouletteDb"
  },
  "SignalR": {
    "HubPath": "/jackpot-hub",
    "JackpotGroupName": "JackpotSubscribers",
    "JackpotUpdatedMethod": "JackpotUpdated",
    "ForceDisconnectMethod": "ForceDisconnect"
  },
  "ActivityTracking": {
    "InactivityTimeoutMinutes": 5,
    "CacheKeyPrefix": "user_activity"
  },
  "Jackpot": {
    "ContributionPercentage": 0.01
  },
  "Api": {
    "BasePath": "/api/v1"
  }
}
